#check whether the number entered is prime or not
num = int(input('Enter a number : '))
if num == 0 :
    print("'0' is neither prime nor composite" )
elif num > 1 :
    for i in range(2, num):
        if (num % i) == 0 :
            print(num, "is not prime number")
            break
    else :
        print(num, " is prime")
else :
    print ("Enter a positive number")
